@model IrisPlantInput

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h4>Iris plant characteristics</h4>
</div>

<form asp-controller="IrisPrediction" asp-action="PredictIrisPlant"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-complete="IrisPrediction.predictionComplete">
    <div class="form-group">
        <label asp-for="SepalLength"></label>
        <input type="text" asp-for="SepalLength" class="form-control">
        <span asp-validation-for="SepalLength" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SepalWidth"></label>
        <input type="text" asp-for="SepalWidth" class="form-control">
        <span asp-validation-for="SepalWidth" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PetalLength"></label>
        <input type="text" asp-for="PetalLength" class="form-control">
        <span asp-validation-for="PetalLength" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PetalWidth"></label>
        <input type="text" asp-for="PetalWidth" class="form-control">
        <span asp-validation-for="PetalWidth" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Predict Iris Plant</button>
</form>

<div id="IrisPredictionModal" class="modal fade">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4>Iris Plant Prediction</h4>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-primary" data-dismiss="modal">OK</a>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/irisPrediction.js"></script>
    <script>
        $(document).ready(function () {
            IrisPrediction.init();
        });
    </script>
}
